alias: EMHASS Combined Automation
description: ""
trigger:
  - platform: time_pattern
    minutes: /3
    id: 3min
    enabled: true
  - platform: state
    entity_id:
      - sensor.limited_power
    for:
      hours: 0
      minutes: 0
      seconds: 0
    id: limited_power
  - platform: state
    entity_id: sensor.soc_batt_forecast
    id: Battery SOC Forecast changes
  - platform: state
    entity_id: sensor.p_batt_forecast
    id: Battery Power Forecast changes
  - platform: state
    entity_id:
      - sensor.p_batt_forecast
    to: "0"
    for:
      hours: 0
      minutes: 0
      seconds: 5
    id: 0W
  - platform: state
    entity_id: sensor.soc_comparison
    to: Lika
    for:
      seconds: 5
    id: Lika
    enabled: true
condition: []
action:
  - choose:
      - conditions:
          - condition: trigger
            id:
              - Battery SOC Forecast changes
              - Battery Power Forecast changes
              - 3min
          - condition: numeric_state
            entity_id: sensor.p_batt_forecast
            below: -50
          - condition: state
            entity_id: sensor.p_batt_forecast_2
            state: Charging
          - condition: template
            value_template: >
              {% set new_value = states('sensor.soc_batt_forecast') | float %}
              {% set old_value = trigger.from_state.state | float %} {{
              new_value | int != old_value | int }}
            enabled: false
        sequence:
          - if:
              - condition: time
                after: "05:00:00"
                before: "23:00:00"
            then:
              - action: huawei_solar.forcible_charge_soc
                data:
                  target_soc: >-
                    {% set value = states('sensor.soc_batt_forecast') | int(0)
                    %} {{ value if value >= 12 else 12 }}
                  power: "{{ (states('sensor.limited_power') | int(0) | abs) }}"
                  device_id: 6893ee838a0972bd3e50d9e0faa0ba5a
              - action: script.emhass_charging_power_2
                metadata: {}
                data: {}
              - action: script.emhass_discharging_power_0w
                data: {}
            else:
              - if:
                  - condition: time
                    after: "23:01:00"
                    before: "04:59:00"
                then:
                  - data:
                      target_soc: >-
                        {{ max(min(states('sensor.soc_batt_forecast') | int(0),
                        100), 12) }}
                      power: "4200"
                      device_id: 6893ee838a0972bd3e50d9e0faa0ba5a
                    action: huawei_solar.forcible_charge_soc
                  - action: script.emhass_charging_power_4200w
                    metadata: {}
                    data: {}
                else: []
        alias: EMHASS (Charge)
      - conditions:
          - condition: trigger
            id:
              - 3min
              - Battery SOC Forecast changes
          - condition: numeric_state
            entity_id: sensor.p_batt_forecast
            above: 50
          - condition: state
            entity_id: sensor.p_batt_forecast_2
            state: Discharging
          - condition: template
            value_template: " {{ states('sensor.battery_state_of_capacity') | float | int != states('sensor.soc_batt_forecast') | float | int }}"
            enabled: false
        sequence:
          - if:
              - condition: numeric_state
                entity_id: sensor.soc_batt_forecast
                below: 12
            then:
              - data:
                  duration: 60
                  power: "{{ (states('sensor.limited_power') | int(0) | abs) }}"
                  device_id: 6893ee838a0972bd3e50d9e0faa0ba5a
                action: huawei_solar.forcible_discharge
            else:
              - data:
                  target_soc: >-
                    {% set value = states('sensor.soc_batt_forecast') | int(0)
                    %} {{ value if value >= 12 else 12 }}
                  power: "{{ (states('sensor.limited_power') | int(0) | abs) }}"
                  device_id: 6893ee838a0972bd3e50d9e0faa0ba5a
                action: huawei_solar.forcible_discharge_soc
        alias: EMHASS (Discharge) FDC
      - conditions:
          - condition: trigger
            id:
              - 3min
              - limited_power
            enabled: true
          - condition: numeric_state
            entity_id: sensor.p_batt_forecast
            above: 50
            enabled: true
          - condition: state
            entity_id: sensor.p_batt_forecast_2
            state: Discharging
            enabled: true
          - condition: template
            value_template: >-
              {{ states('number.battery_maximum_discharging_power') | int(0) !=
              states('sensor.limited_power') | int(0) | abs }}
            enabled: true
        sequence:
          - action: script.emhass_discharging_power
            metadata: {}
            data: {}
          - action: script.emhass_charging_power
            metadata: {}
            data: {}
        alias: EMHASS (Discharge) Power
      - conditions:
          - condition: trigger
            id:
              - 0W
              - Lika
              - 3min
          - condition: state
            entity_id: sensor.soc_comparison
            state: Lika
          - condition: state
            entity_id: sensor.p_batt_forecast
            state: "0.00"
          - condition: not
            conditions:
              - condition: state
                entity_id: sensor.batteries_forcible_charge
                state: Stopped
        sequence:
          - data:
              device_id: 6893ee838a0972bd3e50d9e0faa0ba5a
            action: huawei_solar.stop_forcible_charge
        alias: EMHASS (STOP) FDC FC
      - conditions:
          - condition: trigger
            id:
              - 0W
              - Lika
              - 3min
          - condition: state
            entity_id: sensor.soc_comparison
            state: Lika
          - condition: state
            entity_id: sensor.p_batt_forecast
            state: "0.00"
        sequence:
          - action: script.emhass_charging_power
            metadata: {}
            data: {}
          - action: script.emhass_discharging_power_0w
            metadata: {}
            data: {}
        alias: EMHASS (STOP) power
      - conditions:
          - condition: trigger
            id:
              - limited_power
            enabled: false
        sequence:
          - if:
              - condition: state
                entity_id: sensor.p_batt_forecast_2
                state: Charging
            then:
              - action: script.emhass_discharging_power_0w
                data: {}
              - action: script.emhass_charging_power_2
                metadata: {}
                data: {}
            else:
              - action: script.emhass_charging_power
                data: {}
              - action: script.emhass_discharging_power
                data: {}
mode: queued
max: 10 
