            data: {}
            enabled: false
          - action: script.huawei_discharging_power_5000
            metadata: {}
            data: {}
          - delay:
              hours: 0
              minutes: 0
              seconds: 5
          - if:
              - condition: sun
                after: sunset
                before: sunrise
            then:
              - action: script.huawei_charging_power_0w
                data: {}
