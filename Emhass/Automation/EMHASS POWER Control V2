    trigger: state
  - trigger: state
    entity_id:
      - sensor.p_batt_forecast
    attribute: battery_scheduled_power
  - trigger: state
    entity_id:
      - sensor.battery_state_of_capacity
    attribute: battery_scheduled_soc
    to: "3"
    id: 3%
  - trigger: time_pattern
    minutes: /2
conditions: []
actions:
  - choose:
      - conditions:
          - condition: or
            conditions:
              - condition: and
                conditions:
                  - condition: state
