alias: Predbat STOP Freeze Hold Demand V2.2
description: ""
triggers:
  - entity_id:
      - predbat.status
    id: Demand
    trigger: state
  - minutes: /2
    id: time
    enabled: true
    trigger: time_pattern
conditions:
  - condition: state
    entity_id: switch.predbat_set_read_only
    state: "off"
  - condition: or
    conditions:
      - condition: state
        entity_id: predbat.status
        state: Hold charging
      - condition: state
        entity_id: predbat.status
        state: Demand
      - condition: state
        entity_id: predbat.status
        state: Hold exporting
      - condition: state
        entity_id: predbat.status
        state: Hold for car
      - condition: state
        entity_id: predbat.status
        state: Freeze charging
      - condition: state
        entity_id: predbat.status
        state: Freeze exporting
actions:
  - choose:
      - conditions:
          - condition: state
            entity_id: predbat.status
            state: Hold for Car
        sequence:
          - action: script.huawei_discharging_power_0w
            data: {}
      - conditions:
          - condition: or
            conditions:
              - condition: state
                entity_id: predbat.status
                state: Hold exporting
              - condition: state
                entity_id: predbat.status
                state: Freeze exporting
        sequence:
          - alias: If FDCFC not stop, STOP
            if:
              - condition: not
                conditions:
                  - condition: state
                    entity_id: sensor.batteries_forcible_charge
                    state: Stopped
            then:
              - action: script.huawei_solar_stop_fcfdc
                metadata: {}
                data: {}
          - delay: 3
          - action: script.huawei_charging_power_4500w
            data: {}
          - delay: 3
          - action: script.huawei_discharging_power_0w
            data: {}
        alias: If Status is Freeze exporting or Hold exporting
      - conditions:
          - condition: or
            conditions:
              - condition: state
                entity_id: predbat.status
                state: Hold charging
              - condition: state
                entity_id: predbat.status
                state: Freeze charging
        sequence:
          - alias: If FDCFC not stop, STOP
            if:
              - condition: not
                conditions:
                  - condition: state
                    entity_id: sensor.batteries_forcible_charge
                    state: Stopped
            then:
              - action: script.huawei_solar_stop_fcfdc
                metadata: {}
                data: {}
          - delay: 3
          - action: script.huawei_discharging_power_0w
            data: {}
          - delay: 3
          - action: script.huawei_charging_power_5000w
            data: {}
          - action: script.huawei_charging_power_0w
            data: {}
            enabled: false
        alias: If Status is Hold charging, Freeze Charging
      - conditions:
          - condition: state
            entity_id: predbat.status
            state: Demand
        sequence:
          - alias: If FDCFC not stop, STOP
            if:
              - condition: not
                conditions:
                  - condition: state
                    entity_id: sensor.batteries_forcible_charge
                    state: Stopped
            then:
              - action: script.huawei_solar_stop_fcfdc
                metadata: {}
                data: {}
          - delay:
              hours: 0
              minutes: 0
              seconds: 3
              milliseconds: 0
          - action: script.huawei_charging_power_5000w
            data: {}
          - delay: 3
          - action: script.huawei_discharging_power_5000
            data: {}
mode: restart
max: 10
